#!/usr/bin/env bash

ruby_string="ruby-1.9.2-p180"
gemset_name="ticketee"

if rvm list strings | grep -q "${ruby_string}" ; then

  # Load or create the specified environment
  if [[ -d "${rvm_path:-$HOME/.rvm}/environments" \
    && -s "${rvm_path:-$HOME/.rvm}/environments/${ruby_string}@${gemset_name}" ]] ; then
    \. "${rvm_path:-$HOME/.rvm}/environments/${ruby_string}@${gemset_name}"
  else
    rvm --create  "${ruby_string}@${gemset_name}"
    echo "Created RVM gemset: ${ruby_string}@${gemset_name}"
  fi

  # Ensure that Bundler is installed, install it if it is not.
  if [ ! $(builtin command -v bundle) ] ; then
    gem install bundler
  fi

  # Bundle while redcing excess noise.
  echo "Installing required gems to gemset ${gemset_name}..."
  bundle | grep -v 'Using' | grep -v 'complete' | sed '/^$/d'
  echo "Required gems (and their dependencies) for ${gemset_name} are currently installed."
else

  # Notify the user to install the desired interpreter before proceeding.
  echo "${ruby_string} was not found, please run 'rvm install ${ruby_string}' and then cd back into the project directory."

fi

